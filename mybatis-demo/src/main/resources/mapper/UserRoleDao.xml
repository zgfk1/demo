<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.dao.UserRoleDao">

    <resultMap type="com.example.demo.entity.UserRole" id="UserRoleMap">
        <result property="userId" column="USER_ID" jdbcType="VARCHAR"/>
        <result property="roleId" column="ROLE_ID" jdbcType="VARCHAR"/>
        <result property="projectId" column="PROJECT_ID" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="UserRoleMap">
        select USER_ID,
               ROLE_ID,
               PROJECT_ID
        from office.user_role
        where USER_ID = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="UserRoleMap">
        select USER_ID,
               ROLE_ID,
               PROJECT_ID
        from office.user_role
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="UserRoleMap">
        select
        USER_ID, ROLE_ID, PROJECT_ID
        from office.user_role
        <where>
            <if test="userId != null and userId != ''">
                and USER_ID = #{userId}
            </if>
            <if test="roleId != null and roleId != ''">
                and ROLE_ID = #{roleId}
            </if>
            <if test="projectId != null">
                and PROJECT_ID = #{projectId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="" useGeneratedKeys="true">
        insert into office.user_role(USER_ID, ROLE_ID, PROJECT_ID)
        values (#{userId}, #{roleId}, #{projectId})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update office.user_role
        <set>
            <if test="userId != null and userId != ''">
                USER_ID = #{userId},
            </if>
            <if test="roleId != null and roleId != ''">
                ROLE_ID = #{roleId},
            </if>
            <if test="projectId != null">
                PROJECT_ID = #{projectId},
            </if>
        </set>
        where = #{}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from office.user_role
        where USER_ID = #{USER_ID}
    </delete>
    <!--批量修改-->
    <update id="updateUserRole">
        <foreach close="" collection="userRoleList" index="index" item="item" open="" separator=";">
            UPDATE user_role SET ROLE_ID = #{item.roleId}
            WHERE USER_ID = #{item.userId}
        </foreach>
    </update>

</mapper>
